<resources>

    <style name="Widget.StreetWorkout.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">12dp</item>
        <item name="android:backgroundTint">?snackbarBackgroundColor</item>
        <item name="actionTextColorAlpha">1</item>
    </style>

    <style name="Widget.StreetWorkout.SnackbarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">?snackbarActionTextColor</item>
    </style>

    <style name="Widget.StreetWorkout.OutlinedTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?colorAccent</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.StreetWorkout.FlatButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">50dp</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:textColor">?buttonTextColor</item>
    </style>

</resources>