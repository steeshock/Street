<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/navigationMainColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Customize for snackbar. -->
        <item name="colorSurface">@color/snackbarColor</item>
        <item name="colorOnSurface">@color/snackbarColor</item>
        <item name="snackbarStyle">@style/Widget.App.Snackbar</item>

    </style>

    <style name="Widget.App.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="animationMode">slide</item>
        <item name="android:layout_margin">12dp</item>
    </style>

</resources>