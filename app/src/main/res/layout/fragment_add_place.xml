<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/mainBackGroundColor">

    <data class="FragmentAddPlaceBinding">

        <import
            alias="V"
            type="android.view.View" />

        <variable
            name="viewmodel"
            type="com.steeshock.android.streetworkout.presentation.viewmodels.AddPlaceViewModel" />

        <variable
            name="fragmentBehaviour"
            type="com.steeshock.android.streetworkout.presentation.views.IAddPlace" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/mainBackGroundColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                app:navigationIcon="@drawable/ic_arrow_back_24dp"
                app:title="@string/add_place_title"
                app:titleTextColor="@android:color/black" />

            <ProgressBar
                android:id="@+id/progress_sending"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:progress="@{viewmodel.sendingProgress}"
                android:progressTint="@color/greenColor"
                android:visibility="@{viewmodel.isSendingInProgress ? V.VISIBLE : V.GONE}" />

            <!--Название-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/place_title_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/list_item_spacing"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/place_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:enabled="@{!viewmodel.isSendingInProgress}"
                    android:hint="@string/hint_place_name"
                    android:inputType="textCapSentences"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <!--Краткое описание-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/place_description_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/list_item_spacing"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/place_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:enabled="@{!viewmodel.isSendingInProgress}"
                    android:hint="@string/hint_place_description"
                    android:inputType="textCapSentences"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <!--Адрес-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/place_address_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/list_item_spacing"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/place_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:enabled="@{!viewmodel.isSendingInProgress}"
                    android:hint="@string/hint_place_address"
                    android:inputType="textCapSentences"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <!--Координаты-->
            <LinearLayout
                android:id="@+id/place_position_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/place_position"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="@dimen/list_item_spacing"
                    android:layout_marginStart="@dimen/list_item_spacing"
                    android:layout_weight="1"
                    android:ems="10"
                    android:enabled="@{!viewmodel.isSendingInProgress}"
                    android:hint="@string/hint_place_position"
                    android:inputType="textPersonName"
                    android:maxLines="1" />

                <ImageButton
                    android:id="@+id/myPositionBtn"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/list_item_spacing"
                    android:background="@android:color/transparent"
                    android:clickable="@{!viewmodel.isSendingInProgress}"
                    android:onClick="@{fragmentBehaviour::getPosition}"
                    android:src="@drawable/ic_map_location_36dp"
                    android:visibility="@{viewmodel.isLocationInProgress ? V.GONE : V.VISIBLE}" />

                <ProgressBar
                    android:id="@+id/progress_location_bar"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/list_item_spacing"
                    android:orientation="horizontal"
                    android:visibility="@{viewmodel.isLocationInProgress ? V.VISIBLE : V.GONE}" />
            </LinearLayout>

            <!--Категории-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/place_categories"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/list_item_spacing"
                    android:layout_weight="1"
                    android:enabled="@{!viewmodel.isSendingInProgress}"
                    android:focusable="false"
                    android:hint="@string/hint_place_categories"
                    android:inputType="text" />

                <ImageButton
                    android:id="@+id/categoryBtn"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/list_item_spacing"
                    android:background="@android:color/transparent"
                    android:clickable="@{!viewmodel.isSendingInProgress}"
                    android:onClick="@{fragmentBehaviour::showCategories}"
                    android:src="@drawable/ic_add_circle_36dp" />
            </LinearLayout>

            <!--Фотографии-->
            <LinearLayout
                android:id="@+id/images_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/place_images"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/list_item_spacing"
                    android:layout_marginVertical="@dimen/list_item_spacing"
                    android:layout_marginStart="@dimen/list_item_spacing"
                    android:layout_weight="1"
                    android:ems="10"
                    android:enabled="@{!viewmodel.isSendingInProgress}"
                    android:focusable="false"
                    android:hint="@string/hint_place_images"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:text="@{viewmodel.isImagePickingInProgress ? @string/hint_images_loading : viewmodel.selectedImagesMessage}" />

                <ImageButton
                    android:id="@+id/takeImageBtn"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/list_item_spacing"
                    android:background="@android:color/transparent"
                    android:clickable="@{!viewmodel.isSendingInProgress}"
                    android:onClick="@{fragmentBehaviour::openImagePicker}"
                    android:src="@drawable/ic_add_image"
                    android:visibility="@{viewmodel.isImagePickingInProgress ? V.GONE : V.VISIBLE}" />

                <ProgressBar
                    android:id="@+id/progress_image_bar"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/list_item_spacing"
                    android:orientation="horizontal"
                    android:visibility="@{viewmodel.isImagePickingInProgress ? V.VISIBLE : V.GONE}" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn_add"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="30dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:enabled="@{!viewmodel.isSendingInProgress}"
                    android:minWidth="120dp"
                    android:onClick="@{fragmentBehaviour::resetFields}"
                    android:text="@string/clear_place_btn"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btn_clear"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="30dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:enabled="@{!viewmodel.isSendingInProgress}"
                    android:minWidth="120dp"
                    android:onClick="@{fragmentBehaviour::addNewPlace}"
                    android:text="@string/add_place_btn"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</layout>